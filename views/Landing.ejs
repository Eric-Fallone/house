<% include partials/header %>



<!--Carousel Wrapper-->
    <div id="carousel-thumb" class="carousel slide carousel-fade carousel-thumbnails" data-ride="carousel">
      <!--Slides-->
      <div class="carousel-inner" role="listbox">
        <% for(var i=0; i < allHouses.length ; i++){ %>
        <div class="carousel-item <% if(i == 0) {%>active<%}%>">
          <div class=" overlay-helper">
            <!--Controls-->
              <a class="carousel-control-prev" href="#carousel-thumb" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
              </a>
              <a class="carousel-control-next" href="#carousel-thumb" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
              </a>
              <!--/.Controls-->
            <img class="d-block w-100 img-fluid" src="/photos/Pictures/thumb<%=allHouses[i].address_street%>.jpg" alt="First slide">
            <div class="carousel-overlay">
                <p class="overlay-left address-street carousel-text nunito"><%=allHouses[i].address_street%></p>
            </div>
          </div>
          <div class="container p-0">
            <div class="row">
              <div class="col-6">
                <p class="address-town nunito"><%=allHouses[i].address_town%></p>
              </div>
              <div class="col-6">
                <p class="cost text-right nunito">
                  <% if (allHouses[i].onMarket && allHouses[i].price) { %>
                    <% if(allHouses[i].onMarket === "Currently for Sale"){ %>
                        OFFERED AT <%=allHouses[i].price%>
                    <% } %>
                    <% if(allHouses[i].onMarket === "About to go to market"){ %>
                        COMING SOON
                    <% } %>
                    <% if(allHouses[i].onMarket === "under contract"){ %>
                        UNDER CONTRACT
                    <% } %>
                    <% if(allHouses[i].onMarket === "Sold"){ %>
                        SOLD
                    <% } %>
                <% } else { %>
                  No on market status
                <% } %></p>
              </div>
            </div>
          </div>
        </div>
        <% } %>
      </div>
      <!--/.Slides-->

  </div>

    <!--/.Carousel Wrapper-->

<% include partials/footer %>
